# Enable Emacs-style M-p and M-n behavior
"\ep": history-search-backward
"\en": history-search-forward

# Don't stop on short of trailing slash on symbolic links to directories
set mark-symlinked-directories on

# Increase inter-key timeouts as the default 500ms is too short
set keyseq-timeout 1200

# Color some completion output
set colored-stats on
set colored-completion-prefix on

$if Bash

# Dynamic expansion like Emacs' dabbrev
"\e\C-o": dabbrev-expand

$endif